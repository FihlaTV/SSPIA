<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/x_universe" >

        <ImageView
            android:id="@+id/main_planetimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/saturno" />

        <TextView
            android:id="@+id/tempmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="28c"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#96BEFF"
            android:textSize="50sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/main_planetnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="SOL"
            android:textColor="#7787E5"
            android:textSize="40sp"
            android:visibility="invisible" />

    </RelativeLayout>

    	<ListView
    	    android:id="@+id/main_planetinfo"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:layout_below="@+id/relative2"
    	    android:background="@drawable/x_universe" >

  		 </ListView>

</RelativeLayout>